<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
    <bean class="cc.concurrent.mango.plugin.spring.MangoBeanFactoryPostProcessor">
        <property name="packages">
            <list>
                <value>cc.concurrent.mango.plugin.spring</value>
            </list>
        </property>
    </bean>

    <bean class="cc.concurrent.mango.Mango">
        <constructor-arg type="javax.sql.DataSource" ref="dmds" />
    </bean>

    <bean id="dmds" class="cc.concurrent.mango.DriverManagerDataSource">
        <constructor-arg index="0" type="java.lang.String" value="org.hsqldb.jdbcDriver"/>
        <constructor-arg index="1" type="java.lang.String" value=""/>
        <constructor-arg index="2" type="java.lang.String" value=""/>
        <constructor-arg index="3" type="java.lang.String" value=""/>
    </bean>
</beans>